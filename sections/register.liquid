            type="text"
            value=""
            name="customer[first_name]"
            id="first_name"
            size="30"
            required
          />
        </div>
        <div id="phone_number" class="clearfix large_form" >
        	<input  type="phone_number" class="form-control" placeholder="Phone*"  name="customer[phone_number]" 
                   id="phone_number" class="large" size="30" required tabindex="3" />
         </div>
        <div id="password">         
          <input tabindex="5"
            placeholder="Password*"  
            class="password text {% if form.errors contains "password" %} error{% endif %}"
            id="create_password"
            type="password"
            value=""
            name="customer[password]"
            id="password"
            size="30"
            required
          />
        </div>

      </div>
      
      <div class="right_regis_frm"> 
        
