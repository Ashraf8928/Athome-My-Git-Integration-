<div class="home-slider-con">
<div class="row">
  
   <h2 class="featured-grid--heading" data-item="section-heading">{{section.settings.title1}}</h2>
  <div class="column js">    
	<div class="slider-custom-shop">
      
      {% for block in section.blocks %}
      <a href=" {%- if block.settings.url != blank -%} {{ block.settings.url }}{%else%} # {% endif%} {{ block.settings.view }}">
      {%- if block.settings.image != blank or block.settings.mo_image != blank -%}<img src="{{ block.settings.image | image_url: width: '1700'   }}" alt="{{ block.settings.image.alt }}" />{% endif %}
      
      
      
    
       {%- if block.settings.title != blank -%}
      <div class="slide-title">{{ block.settings.title }}</div>
       {%endif%}
       
       {%- if block.settings.sub-heading != blank -%}
     <div class="slide-sub-heading">{{ block.settings.sub-heading }}</div>
       {%endif%}
       
       {%- if block.settings.home-caption != blank -%}
     <div class="slide-home-caption">{{ block.settings.home-caption }}</div>
       {%endif%}
       
       {%- if block.settings.view != blank -%}
     <div class="slide-view"><a href=" {%- if block.settings.url != blank -%} {{ block.settings.url }}{%else%} # {% endif%} {{ block.settings.view }}"></a></div>
       {%endif%}
        </a>
      {% endfor %}
     </div>
  {% comment%} <div class="ho-slider2-nav-con">
    <div class="home-slider2-nav" >
      
      {% for block in section.blocks %}
      
      <div class="slide-home-nav desktop-view"><img src="{{ block.settings.image | img_url: '150px*150px' }}" alt="{{ block.settings.image.alt }}" /></div>
      {% endfor %}
      
       {% for media in product.media %}
          {% assign img_url_full = media | img_url: 'master' %}
         <img class="lazyautosizes lazyloaded" src="{{img_url_full}}" data-sizes="auto" data-widths="[295,394,590]" alt="{{media.alt}}" data-srcset="{{img_url_full}}">
    	{% endfor %}
    </div>
    </div>
    {%endcomment%}
</div>
</div>
</div>
<style>
 
.js .slider-single > div:nth-child(1n+2) { display: none }

.js .slider-single.slick-initialized > div:nth-child(1n+2) { display: block }

.slider-nav .slick-slide { cursor: pointer; }

</style>



