          <h1 class="header--logo">
            {%
               render 'logo',
               logo: logo,
               height_range: logo_height %}
          </h1>
        {% else %}
          <div class="header--logo">
            {%
               render 'logo',
               logo: logo,
               height_range: logo_height %}
          </div>
        {% endif %}

